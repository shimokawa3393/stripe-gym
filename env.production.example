# StripeGym Production Environment Config
# ЁЯФТ цЬмчХкчТ░хвГшинхоЪя╝ИщЗНшжБя╝ЪхоЙхЕиуБлчобчРЖуБЧуАБуВ│уГ╝уГЙуБлуВ│уГЯуГГуГИуБЧуБкуБДя╝Й

# ===========================================
# уВ╗уВнуГеуГкуГЖуВгшинхоЪ
# ===========================================
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-production-key-here-change-this

# CSRFф┐Эшн╖
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600

# ===========================================
# уГЗуГ╝уВ┐уГЩуГ╝уВ╣шинхоЪ
# ===========================================
DATABASE_URL=postgresql://stripegym:your-production-password@db:5432/stripegym_prod

# уГЗуГ╝уВ┐уГЩуГ╝уВ╣цОеч╢ЪуГЧуГ╝уГлшинхоЪ
SQLALCHEMY_POOL_SIZE=20
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_POOL_RECYCLE=3600
SQLALCHEMY_POOL_PRE_PING=true

# ===========================================
# StripeшинхоЪ
# ===========================================
# ЁЯФ┤ щЗНшжБя╝ЪцЬмчХкчФиуБоStripe APIуВнуГ╝уВТшинхоЪ
STRIPE_SECRET_KEY=pk_live_your-live-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-live-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-live-webhook-secret

# StripeшинхоЪ
STRIPE_CURRENCY=jpy
STRIPE_COUNTRY=JP

# Price IDs (цЬмчХкчФи)
PRICE_ID=price_your-production-price-id
PREMIUM_PRICE_ID=price_your-production-premium-price-id
STANDARD_PRICE_ID=price_your-production-standard-price-id

# ===========================================
# уВвуГЧуГкуВ▒уГ╝уВ╖уГзуГ│шинхоЪ
# ===========================================
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com

# уВ╗уГГуВ╖уГзуГ│шинхоЪ
PERMANENT_SESSION_LIFETIME=3600
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ===========================================
# уГнуВ░шинхоЪ
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/stripe-gym.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ===========================================
# чЫгшжЦуГ╗уВиуГйуГ╝щАЪчЯешинхоЪ
# ===========================================
# Slack Webhook (цЬмчХкуВиуГйуГ╝щАЪчЯечФи)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Sentry (уВиуГйуГ╝чЫгшжЦ)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# щАЪчЯеща╗х║жшинхоЪ
MAX_ERROR_NOTIFICATIONS_PER_HOUR=5
NOTIFICATION_THROTTLE_SECONDS=300

# ===========================================
# уГСуГХуВйуГ╝уГЮуГ│уВ╣шинхоЪ
# ===========================================
# GunicornшинхоЪ
WORKERS=4
WORKER_CONNECTIONS=1000
TIMEOUT=30
KEEPALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# RedisшинхоЪя╝ИуВнуГгуГГуВ╖уГечФия╝Й
REDIS_URL=redis://redis:6379/0
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# ===========================================
# уВ╗уВнуГеуГкуГЖуВгуГШуГГуГАуГ╝шинхоЪ
# ===========================================
# HTTPSх╝╖хИ╢
FORCE_HTTPS=true

# CORSшинхоЪ
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# уВ╗уВнуГеуГкуГЖуВгуГШуГГуГАуГ╝
SECURITY_HEADERS=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains

# ===========================================
# уГбуГ╝уГлшинхоЪя╝ИщАЪчЯечФия╝Й
# ===========================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=StripeGym noreply@your-domain.com

# ===========================================
# щЦЛчЩ║уГ╗уГЗуГРуГГуВ░шинхоЪя╝ИцЬмчХкуБзуБпч╜оуБНцПЫуБИя╝Й
# ===========================================
STRIPE_WEBHOOK_BYPASS_SIGNATURE=false
DEBUG_MODE=false
VERBOSE_LOGGING=false
